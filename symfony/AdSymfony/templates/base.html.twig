<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
        <link href="{{ asset('css/main.css') }}" rel="stylesheet">
        {% endblock %}
    </head>
    <body>
    <h1>Supers Annonces </h1>
    <nav>
        <ul>
            <li>
                <a href="{{ path('advert') }}">Accueil</a>
            </li>
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
            <li>
                <a href="{{ path('advert_add') }}">Poster Annonce</a>
            </li>
            {% else %}
            <li>
                <a href="{{ path('app_login') }}">Connexion</a>
            </li>
            {% endif %}
        </ul>
    </nav>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
